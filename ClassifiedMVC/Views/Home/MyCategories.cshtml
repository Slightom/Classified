@model IEnumerable<ClassifiedMVC.Models.PersonalizedCategory>

<p>
    <h2>Favourite Categories</h2>
</p>
<p>
    @Html.ActionLink("CreateNew", "Create", "PersonalizedCategories")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PriceMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceMax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>

        <th>
            @Html.Label("Location")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Path)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PriceMin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceMax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>

        <td>
            @if (item.PCLs.Count() == 0)
            {
                <span>----</span>
            }
            else
            {
                <span>@item.PCLs.ElementAt(0).Location.LocationName</span>
            }
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", "PersonalizedCategories", new { id=item.PersonalizedCategoryID }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PersonalizedCategoryID })
        </td>

        
    </tr>
}

</table>

<p>
    @Html.ActionLink("Back to MyProfile", "MyProfile","Home")
</p>
