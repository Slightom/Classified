@model IEnumerable<ClassifiedMVC.Models.PersonalizedCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceMax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>

        <th>
            @Html.Label("Location")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceMin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PriceMax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Path)
        </td>

        <td>
            @if (item.PCLs.Count() == 0)
            {
                <span>----</span>
            }
            else
            {
                <span>@item.PCLs.ElementAt(0).Location.LocationName</span>
            }
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PersonalizedCategoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PersonalizedCategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PersonalizedCategoryID })
        </td>
    </tr>
}

</table>
